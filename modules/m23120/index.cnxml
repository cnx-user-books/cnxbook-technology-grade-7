      <section id="id1579776">
        <title>Needs:</title>
        <list id="id4581224" list-type="bulleted">
          <item>name</item>
          <item>screen with positions for buzzer and light</item>
          <item>10 questions and 10 answers</item>
          <item>20 split pins</item>
